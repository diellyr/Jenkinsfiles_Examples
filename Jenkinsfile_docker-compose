pipeline {
    agent any
    
    stages {
        
        stage('Baixar Aplicação') {
        git url: 'https://github.com/diellyr/enquete.git'
           }
        
        stage('Descompactar Aplicação') {
            steps {
                sh 'tar -xvzf Enquete1.0.tar.gz'
            }
        }
        stage('Iniciar Aplicação') {
            steps {
                sh '''
                    cd Enquete1.0
                    sudo docker-compose up
                   '''
            }
        }
        stage('Testar Aplicação') {
            steps {
                echo 'teste....'
            }
        }
    }
}
